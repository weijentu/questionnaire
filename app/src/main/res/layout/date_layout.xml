              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/ll_datepicker_parent"
              android:gravity="center">
    <TextView
        android:id="@+id/tv_question_title"
        android:paddingLeft="@dimen/XL"
