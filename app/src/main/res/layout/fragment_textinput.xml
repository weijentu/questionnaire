<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_question_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bc1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_question_title"
                style="@style/risk_theme_title"
                android:paddingLeft="@dimen/XL"
                android:text="Question tile :"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/XL"
                android:layout_marginLeft="@dimen/XL"
                android:layout_marginRight="@dimen/XL"
                android:layout_marginTop="@dimen/L"
                android:background="@drawable/shape_edit_text"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/et_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="top|left"
                    android:hint="Enter your answer here"
                    android:lines="5"
                    android:maxLength="100"
                    android:paddingLeft="@dimen/XL"
                    android:paddingRight="@dimen/XL"
                    android:paddingTop="@dimen/M"
                    android:textColor="@color/tc1"
                    android:textColorHint="@color/tc3"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>


        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/XXXXL"
            android:layout_marginLeft="@dimen/XL"
            android:layout_marginRight="@dimen/XL"
            android:background="@drawable/btn_selector"
            android:text="Submit"
            android:textColor="@color/tc0"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>

</LinearLayout>