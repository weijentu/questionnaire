<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/ll_multichoice_parent"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout

        android:paddingLeft="@dimen/XL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_question_title"
            style="@style/risk_theme_title"
            android:text="请选择接种取消原因："/>

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:checked="false"
            android:drawablePadding="@dimen/L"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/L"
            android:text="取消原因1"
            android:textColor="@color/tc1"
            android:textSize="@dimen/text_size_16"/>

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:checked="false"
            android:drawablePadding="@dimen/L"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/L"
            android:text="取消原因1"
            android:textColor="@color/tc1"
            android:textSize="@dimen/text_size_16"/>

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:checked="false"
            android:drawablePadding="@dimen/L"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/L"
            android:text="取消原因1"
            android:textColor="@color/tc1"
            android:textSize="@dimen/text_size_16"/>

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:checked="false"
            android:drawablePadding="@dimen/L"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/L"
            android:text="取消原因1"
            android:textColor="@color/tc1"
            android:textSize="@dimen/text_size_16"/>
        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="@dimen/L"
            android:id="@+id/ll_cancel_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/XL"
            android:layout_marginRight="@dimen/XL"
            android:background="@drawable/shape_edit_text"
            android:orientation="vertical">

            <EditText

                android:id="@+id/et_cancel_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入原因"
                android:lines="4"
                android:paddingLeft="@dimen/XL"
                android:paddingRight="@dimen/XL"
                android:textColor="@color/tc1"
                android:gravity="top|left"
                android:textColorHint="@color/tc3"
                android:maxLength="20"
                android:textSize="@dimen/text_size_14"
                android:paddingTop="@dimen/M"
                android:background="@android:color/transparent"/>

            <TextView
                android:id="@+id/tv_text_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:paddingBottom="@dimen/L"
                android:paddingRight="@dimen/L"
                android:text="0/20"
                android:textColor="@color/tc3"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>

    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/XXXXL"
        android:background="@drawable/btn_selector"
        android:layout_marginLeft="@dimen/XL"
        android:layout_marginRight="@dimen/XL"
        android:text="提交"
        android:textColor="@color/tc0"
        android:textSize="@dimen/text_size_16" />

</LinearLayout>